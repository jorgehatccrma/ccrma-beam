\mode<presentation>

\RequirePackage{varwidth}
\RequirePackage{kvoptions}


\SetupKeyvalOptions{
    family=CBT,
    prefix=CBT@
}


\let\Tiny\tiny % hack to remove a the following warning upon compilation of the example:
               % LaTeX Font Warning: Font shape `OT1/cmss/m/n' in size <4> not available(Font)

\newif\ifdarktheme
\newif\ifcustomtitlepage
\newif\ifusegradient
\newif\ifsimpletheme
\newif\iflightfooter
\newif\ifcenterframetitle
\newif\ifcenterauthorinfo

\DeclareVoidOption{dark}{\darkthemetrue}    % use dark theme
\DeclareVoidOption{customtitle}{\customtitlepagetrue}    % use custom title page
\DeclareVoidOption{gradient}{\usegradienttrue}    % use custom title page
\DeclareVoidOption{simple}{\simplethemetrue}    % use custom title page
\DeclareVoidOption{simplefootline}{\lightfootertrue}    % use simple (minimal) footline
\DeclareVoidOption{centerframetitle}{\centerframetitletrue}   % center frame titles
\DeclareVoidOption{centerauthorinfo}{\centerauthorinfotrue} % center author info (including
                                                        % institute and stuff) in the
                                                        % title page

% chamfered innertheme options (further modified and renamed CCRMA innertheme)
% (see https://github.com/pmagwene/beamer-theme-collection/blob/master/beamerinnerthemechamfered.sty)
\DeclareBoolOption[false]{shadowedblocks}
\DeclareBoolOption[false]{outlineblocks}
\DeclareStringOption[2pt]{corners}[2pt]
\DeclareStringOption[0.3em]{blockpadding}[0.3em]

\ProcessKeyvalOptions*

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Defaults using standard Beamer themes
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\ifsimpletheme
    \usetheme{Pittsburgh} % Madrid, Pittsburgh, Singapore, Copenhagen, Warsaw
\else
    \usetheme{Madrid} % Madrid, Pittsburgh, Singapore, Copenhagen, Warsaw
\fi


\useinnertheme[ \ifCBT@shadowedblocks
                    realshadow,
                \fi
                \ifCBT@outlineblocks
                    outline,
                \fi
                corners=\CBT@corners,
                padding=\CBT@blockpadding]{CCRMA}



\usefonttheme[onlymath]{serif}
\setbeamertemplate{sections/subsections in toc}[sections numbered]
\setbeamertemplate{items}[default] % ball, circle, rectangle and default
\setbeamersize{text margin left=1cm, text margin right=1cm}
% \useoutertheme[subsection = false]{miniframes}
